<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>63.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Legacy Data Display</masterLabel>
    <description>Renders any imported Legacy Data linked to the current record in context.</description>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="componentTitle" type="String" default="Legacy Data" label="Header Title" />
            <property name="layoutColumns" type="String" default="single" label="Layout Columns" datasource="single, two" />
            <property name="layoutType" type="String" default="card" label="Layout Type" datasource="card, section" />
            <property name="hideIfNoData" type="Boolean" default="false" label="Hide if no Legacy Data" />
            <property name="noDataMessage" type="String" default="No Legacy data found" label="Message to display when no data is found" />

            <supportedFormFactors>
                <supportedFormFactor type="Large" />
                <supportedFormFactor type="Small" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
