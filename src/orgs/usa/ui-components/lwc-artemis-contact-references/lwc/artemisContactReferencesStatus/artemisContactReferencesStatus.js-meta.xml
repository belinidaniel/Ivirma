<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <masterLabel>Artemis - Contact References Status</masterLabel>
    <description>This component displays the external Artemis server references for a given Contact record.</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="componentTitle" type="String" default="Artemis Contact References" label="Header Title" />
            <property name="componentIcon" type="String" default="custom:custom87" label="Header Icon" />

            <objects>
                <object>Contact</object>
            </objects>

            <supportedFormFactors>
                <supportedFormFactor type="Large" />
                <supportedFormFactor type="Small" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
