<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <description>This component allows users to select a referral source metadata record from a given Artemis Server record.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="emrServerId" type="String" label="Artemis Server Id" role="inputOnly" />
            <property name="displayReferenceIds" type="Boolean" label="Show Reference Ids" role="inputOnly" default="false" />
            <property name="required" type="Boolean" label="Required?" role="inputOnly" default="true" />
            <property name="requiredMessage" type="String" label="Required Message" role="inputOnly" default="Please select a referral source." />

            <property name="selectedRecordId" type="String" label="Selected Ref. Source Metadata record Id" role="outputOnly" />
            <property name="selectedRefCategory" type="String" label="Selected Referral Category Name" role="outputOnly" />
            <property name="selectedRefPersonId" type="String" label="Selected Referral Person Id" role="outputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
